<!DOCTYPE html>
<html>
<head>
  <title>Placeholder</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	
<%= yield %>
<% flash.each do |name, msg| %>
	<%= content_tag :div, :class => "alert alert-#{name}" do %>
		<h4><%= name.capitalize %>!</h4>
		<ul>
			<li><%= msg %></li>
		</ul>
	<% end %>
<% end %>
</body>
</html>
